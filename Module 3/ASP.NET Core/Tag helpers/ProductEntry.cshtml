@page
@model ProductEntryModel
@{
    ViewData["Title"] = "New Product Entry";
}

<h2>New Product Entry</h2>

<form method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Product.ProductID" class="form-label"></label>
        <input asp-for="Product.ProductID" class="form-control" />
        <span asp-validation-for="Product.ProductID" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Product.ProductName" class="form-label"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Product.Description" class="form-label"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>

    <div class="col-md-4">
        <label asp-for="Product.Quantity" class="form-label"></label>
        <input asp-for="Product.Quantity" class="form-control" />
        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Product.UnitPrice" class="form-label"></label>
        <input asp-for="Product.UnitPrice" class="form-control" />
        <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Product.ReOrderLevel" class="form-label"></label>
        <input asp-for="Product.ReOrderLevel" class="form-control" />
        <span asp-validation-for="Product.ReOrderLevel" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
